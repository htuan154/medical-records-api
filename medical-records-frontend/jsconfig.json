{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "bundler",
    "paths": { "@/*": ["src/*"] },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "types": [],
    "skipLibCheck": true,
    "allowJs": true,
    "ignoreDeprecations": "6.0"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/declarations.d.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/node_modules/@types/sass-loader"
  ]
}
